<div class="container mx-auto flex justify-center items-center min-h-screen">
    <div class="grid grid-cols-12 w-[1110px] bg-white rounded-xl shadow-2xl">
        <div class="col-span-5">
            <div class="bg-[url('/img/logo-login.png')] w-full h-full bg-center bg-cover bg-cyan-600 rounded-l-xl">

            </div>
        </div>
        <div class="col-span-7">
            <div class="px-4">
                <div class="mt-4 flex justify-between">
                    <div></div>
                    <a class="px-3 py-[6px] text-gray-500 rounded-md hover:bg-gray-100 hover:text-cyan-500" href="/auth/logout">Đăng xuất</a>
                </div>
                <form action="/auth/change-password" method="POST"
                    class="flex flex-col items-center p-28 bg-white rounded-xl" id="form-change-password">
                    <h3 class="text-3xl text-cyan-600 font-bold uppercase text-center">Đổi mật khẩu</h3>

                    <div class="spacer"></div>

                    <div class="form-group w-full">
                        <label for="password" class="form-label font-semibold">Mật khẩu mới</label>
                        <input id="password" name="password" rules="required|min:5" type="password" placeholder=""
                            class="form-control text-sm rounded-md">
                        <span class="form-message text-sm"></span>
                    </div>

                    <div class="form-group w-full">
                        <label for="comfirmPassword" class="form-label font-semibold">Xác nhận mật khẩu</label>
                        <input id="comfirmPassword" name="comfirmPassword" rules="required|min:5|comfirm/password"
                            type="password" placeholder="" class="form-control text-sm rounded-md">
                        <span class="form-message text-sm"></span>
                    </div>

                    <button class="form-submit bg-cyan-600 hover:bg-cyan-700 text-sm mx-auto">Xác nhận</button>

                </form>

                <script>
                    var form = new Validator('#form-change-password');
                </script>
            </div>
        </div>
    </div>
</div>

<div onclick="handleNavigateBack()"
    class="fixed top-4 left-8 cursor-pointer py-[6px] px-3 group text-sm font-semibold text-gray-500">
    <i class="fa-solid fa-arrow-left group-hover:-translate-x-4 transition-all"></i>
    <span class="ml-1 group-hover:text-gray-800">Quay lại</span>
</div>

<script>

    const handleNavigateBack = () => {
        window.history.back();
    }
</script>